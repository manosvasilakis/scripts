#!/bin/bash
# Auto sync my neomutt mails account.

notify-send "ðŸ“¬""Auto-sync mails starting now." &

# Check for internet connection
ping -c 1 nosma.gr > /dev/null 2>&1
if [ $? -ne 0 ] ; then
	notify-send "ðŸ“¬""No Internet Connection, quit syncing..."&
	exit && return 1
fi

mw -Y > /dev/null 2>&1
mpv ~/.local/notification.mp3 > /dev/null 2>&1 &
pkill -RTMIN+9 dwmblocks
notify-send "ðŸ“¬""Auto-sync Done." &
