#!/bin/sh
# Auto sync RSS feeds.

export DISPLAY=:0.0 && export XAUTHORITY=/run/user/1000/Xauthority && /usr/bin/notify-send "ðŸ“° Newsboat:" "Start syncing ur RSS feeds"; /usr/bin/ping -c 1 nosma.gr > /dev/null 2>&1 && /usr/bin/newsboat -x reload || /usr/bin/notify-send  --expire-time=450 "ðŸ“° Newsboat:" "No Internet Connection, quit syncing..."; /usr/bin/notify-send "ðŸ“° Newsboat:" "Done."; /usr/bin/mpv ~/.local/notification.mp3 > /dev/null 2>&1; /usr/bin/pkill -RTMIN+16 dwmblocks
