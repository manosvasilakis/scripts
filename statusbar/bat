#!/bin/sh

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (ğŸ”Œ for plugged up, ğŸ”‹ for discharging on battery, etc.).

# Check if battery directories are detected
# [ ! -e /sys/class/power_supply/BAT?* ] && echo "No battery found" && exit 1

# Loop through all attached batteries and format the info
# for battery in /sys/class/power_supply/BAT?*
# do
# Sets up the status and capacity
# status=$(cat "$battery/status")
status=$(cat "/sys/class/power_supply/BAT0/status")
case "$status" in
	"Full") status="âš¡" ;;
	"Discharging") status="ğŸ”‹" ;;
	"Charging") status="ğŸ”Œ" ;;
	"Not charging") status="ğŸ›‘" ;;
	"Unknown") status="â™»" ;;
esac
capacity=$(cat "/sys/class/power_supply/BAT0/capacity")
# capacity=$(cat "$battery/capacity")
# Will make a warn variable if discharging and low
[ "$status" = "ğŸ”‹" ] && [ "$capacity" -le 25 ] && local warn="â—"
# Prints the info
printf "%s%s%d%%\n" "$status" "$warn" "$capacity"
# done && return 0
